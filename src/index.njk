            </div>
            <div class="hero__featured">
                {%-for work in collections.featured-%}

                    <a href="fakepage">
                        <div class="hero__featured__project"  
                        style="background-image: url('{{work.data.imgHighlight}}');
                        background-size: cover;
                        background-repeat: no-repeat;">
                            <div class="hero__featured__project-title">
                                <h2>{{work.data.title}}</h2>
                                <p>{{work.data.typeOfWork | join(' | ')}}</p>
